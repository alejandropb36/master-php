<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('assets/css/style.css') }}" type="text/css" rel="stylesheet"
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <div id="header">
                <h1>Tareas symfony</h1>
                <ul id="menu">
                    {% if app.user %}
                        <li ><a href="{{ path('task') }}">Inicio</a></li>
                        <li ><a href="{{ path('task') }}">Mis Tareas</a></li>
                        <li ><a href="{{ path('task.create') }}">Crear tarea</a></li>

                        <li class="rigth"><a href="{{ path('logout') }}">Logout</a></li>
                        <li class="rigth"><a href="#">{{ app.user.name ~ ' ' ~ app.user.surname }}</a></li>
                    {% else %}
                        <li class="rigth"><a href="{{ path('login') }}">Login</a></li>
                        <li class="rigth"><a href="{{ path('user.register') }}">Registro</a></li>
                    {% endif %}
                </ul>
            </div>
            <div class="clearfix"></div>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
